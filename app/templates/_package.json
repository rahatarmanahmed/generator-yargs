{
  "name": "<%= commandName %>",
  "main": "bin/index.js",
  "version": "0.0.0",
  "description": "<%= description %>",
  "author": "<%= author %>",
  "preferGlobal": "true",
  "bin": {
    "<%= commandName %>": "./bin/index.js"
  },
  "dependencies": {
    "yargs": "1.3.2"
  }<% if(useCoffee) { %>,
  "devDependencies": {
    "coffee-script": "*",
    "rimraf": "*"
  },
  "scripts": {
    "clean": "rimraf lib",
    "prepublish": "npm run build",
    "prebuild": "npm run clean",
    "build": "coffee -co lib src/**.coffee"
  }
  <% } %>
}
